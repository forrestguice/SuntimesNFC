<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent">

        <ImageView android:id="@+id/icon" android:layout_gravity="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_nfc_192"
            android:layout_margin="16dp" tools:ignore="ContentDescription" />

        <TextView android:id="@+id/text_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/action_scantag" />

        <TextView android:id="@+id/text_summary"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/summary_scantag" />

        <LinearLayout android:id="@+id/layout_buttons" android:orientation="horizontal" android:layout_gravity="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <!--<Button android:id="@+id/snooze_button"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp"
                android:text="@string/action_snooze" />

            <Button android:id="@+id/dismiss_button" android:layout_margin="8dp"
                android:visibility="visible" android:enabled="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/action_dismiss" />-->

        </LinearLayout>


    </LinearLayout>


    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <android.support.design.widget.FloatingActionButton android:id="@+id/snoozeButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:visibility="visible"
            android:clickable="true" android:focusable="true"
            app:srcCompat="@drawable/ic_noon_dark" />

        <android.support.design.widget.FloatingActionButton android:id="@+id/dismissButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:visibility="visible"
            android:clickable="true" android:focusable="true"
            app:srcCompat="@drawable/ic_noon_dark" />

        <android.support.design.widget.FloatingActionButton android:id="@+id/helpButton" android:visibility="gone"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:clickable="true" android:focusable="true"
            app:srcCompat="@drawable/ic_baseline_help_24" />

        <android.support.design.widget.FloatingActionButton android:id="@+id/aboutButton" android:visibility="gone"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true" android:focusable="true"
            app:srcCompat="@drawable/ic_baseline_info_24" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>